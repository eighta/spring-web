<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
		http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="nuevaPersona" class="a8.data.Person" />
	
	<!-- flow lifecycle Events -->
	<on-start>
		<evaluate expression="BeanName.methodName()"/>
	</on-start>
	
	<on-end>
		<evaluate expression="BeanName.methodName()"/>
	</on-end>

	<!-- states and actions-->
	<view-state id="enterPersonInfo" model="nuevaPersona">
		
		<!-- view state lifecycle Events -->
		<on-entry>
			<set name="flowScope.accountNumber" value="requestParameters.accountNumber"/>
		</on-entry>
		
		<on-render>
			<evaluate expression=""></evaluate>
		</on-render>
		
		<on-exit>
			<evaluate expression=""></evaluate>
		</on-exit>
		
		<!-- transitions -->
		<transition on="proceed" to="reviewPerson">
			<evaluate expression="BeanName.methodName(nuevaPersona)"></evaluate>
		</transition>
	</view-state>

	<view-state id="reviewPerson">
		<transition on="confirm" to="enterIdentityCard" />
	</view-state>
	
	<end-state id="end" />
	
	<end-state id="finish" view="externalRedirect:contextRelative:/person/1" />

</flow>